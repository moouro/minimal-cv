---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="bg-zinc-950 text-zinc-400 antialiased">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Christopher Anderson
		Designer & Front-end Developer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<script is:inline src="https://cdn.jsdelivr.net/npm/uikit@3.20.8/dist/js/uikit.min.js"></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/uikit@3.20.8/dist/js/uikit-icons.min.js"
		></script>
	</body>
</html>
